# Streamlit Cloud Secrets Configuration Template
# Copy this file to secrets.toml and fill in your actual values
# This file is used by Streamlit Community Cloud for production deployment

# ============================================================================
# SALESFORCE CONFIGURATION
# ============================================================================
[salesforce]
username = "your_salesforce_username@company.com"
password = "your_salesforce_password"
security_token = "your_security_token"
consumer_key = "your_connected_app_consumer_key"
consumer_secret = "your_connected_app_consumer_secret"
token_url = "https://login.salesforce.com/services/oauth2/token"
timeout = 40

# ============================================================================
# STORAGE CONFIGURATION
# ============================================================================
[storage]
provider = "sharepoint"  # "local" or "sharepoint"
path_file = "/path/to/your/local/storage"
path_to_sharepoint = "https://yourcompany.sharepoint.com/sites/YourSite/Shared Documents"
template_ict = "/path/to/templates/TEMPLATE_ICT"
template_fct = "/path/to/templates/TEMPLATE_FCT"
template_iat = "/path/to/templates/TEMPLATE_IAT"

# ============================================================================
# SHAREPOINT CONFIGURATION
# ============================================================================
[sharepoint]
base_path = "01_2025"  # Optional, leave empty for root
tenant_id = "your_azure_tenant_id"
client_id = "your_azure_client_id"
client_secret = "your_azure_client_secret"
site_id = "your_sharepoint_site_id"
drive_id = "your_sharepoint_drive_id"

# ============================================================================
# AUTHENTICATION
# ============================================================================
[auth]
password_hash = "your_sha256_hashed_password"

# ============================================================================
# OPTIONAL CONFIGURATION
# ============================================================================
[logging]
level = "INFO"
# file = "/path/to/logs/app.log"  # Optional
