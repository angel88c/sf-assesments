# iBtest Assessment Application - Environment Variables Template
# Copy this file to .env and fill in your actual values

# ============================================================================
# SALESFORCE CONFIGURATION
# ============================================================================
# Salesforce credentials for API access
SALESFORCE_USERNAME=your_salesforce_username@company.com
SALESFORCE_PASSWORD=your_salesforce_password
SALESFORCE_SECURITY_TOKEN=your_security_token
SALESFORCE_CONSUMER_KEY=your_connected_app_consumer_key
SALESFORCE_CONSUMER_SECRET=your_connected_app_consumer_secret

# Salesforce OAuth token URL
TOKEN_URL=https://login.salesforce.com/services/oauth2/token

# Salesforce API timeout in seconds (recommended: 40-60)
SF_TIMEOUT=40

# ============================================================================
# STORAGE CONFIGURATION
# ============================================================================
# Local storage path for templates
PATH_FILE=/path/to/your/local/storage

# SharePoint URL for Salesforce Path__c field
PATH_TO_SHAREPOINT=https://yourcompany.sharepoint.com/sites/YourSite/Shared Documents

# Template folders for each assessment type
TEMPLATE_ICT=/path/to/templates/TEMPLATE_ICT
TEMPLATE_FCT=/path/to/templates/TEMPLATE_FCT
TEMPLATE_IAT=/path/to/templates/TEMPLATE_IAT

# ============================================================================
# SHAREPOINT CONFIGURATION (Optional - for SharePoint integration)
# ============================================================================
# Storage provider: local or sharepoint
STORAGE_PROVIDER=local

# Azure AD credentials (required if STORAGE_PROVIDER=sharepoint)
AZURE_TENANT_ID=your_azure_tenant_id
AZURE_CLIENT_ID=your_azure_client_id
AZURE_CLIENT_SECRET=your_azure_client_secret

# SharePoint site and drive IDs (required if STORAGE_PROVIDER=sharepoint)
SHAREPOINT_SITE_ID=your_sharepoint_site_id
SHAREPOINT_DRIVE_ID=your_sharepoint_drive_id

# Base path within SharePoint (optional, e.g., "01_2025")
# Leave empty to use root of document library
SHAREPOINT_BASE_PATH=

# ============================================================================
# AUTHENTICATION
# ============================================================================
# Application password hash (SHA-256)
# Generate with: python scripts/generate_password_hash.py
APP_PASSWORD=your_sha256_hashed_password

# ============================================================================
# OPTIONAL CONFIGURATION
# ============================================================================
# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log file path (optional)
# LOG_FILE=/path/to/logs/app.log
